<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbastatsquiz.fragments.help.FragmentoHelpAboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/floor_load_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text="@string/tab_aboutUs"
                android:textColor="@color/material_black"
                android:textSize="26dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_ligero"

                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/material_black" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"

            android:text="@string/aboutUs_paragraph"
            android:textAlignment="inherit"
            android:textColor="@color/material_black"
            android:textSize="18dp"


            />

        <ImageView
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_gravity="center"
            android:src="@drawable/logo_bowl_300x300">

        </ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/help_forMoreInfo"
            android:textAlignment="inherit"
            android:textColor="@color/material_black"
            android:textSize="16dp"
            android:textStyle="bold"


            />


        <TextView

            android:textColorLink="#006bb3"
            android:autoLink="web"
            android:clickable="true"
            android:id="@+id/linkBowl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="https://bowlofricedev.jdevcloud.com"
            android:textAlignment="inherit"
            android:textColor="@color/material_black"
            android:textSize="16dp"
            android:textStyle="italic"


            />

        <TextView
            android:textColorLink="#006bb3"

            android:id="@+id/linkBowlTerms"
            android:clickable="true"
            android:autoLink="web"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="https://bowlofricedev.jdevcloud.com/terms-conditions-nba-stats-quiz/"
            android:textAlignment="inherit"
            android:textColor="@color/material_black"
            android:textSize="16dp"
            android:textStyle="italic"


            />

        <TextView
            android:textColorLink="#006bb3"

            android:id="@+id/linkBowlPrivacy"
            android:clickable="true"
            android:autoLink="web"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="https://bowlofricedev.jdevcloud.com/privacy-policy-nba-stats-quiz"
            android:textAlignment="inherit"
            android:textColor="@color/material_black"
            android:textSize="16dp"
            android:textStyle="italic"


            />
        <View
            android:layout_marginTop="70px"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorNegro"/>
        <ImageView

            android:id="@+id/rateGP"
            android:layout_marginTop="30px"
            android:layout_gravity="center"
            android:layout_width="500px"
            android:layout_height="200px"
            android:src="@drawable/gprating"/>
        <ImageView

            android:id="@+id/followIG"
            android:layout_gravity="center"
            android:layout_width="500px"
            android:layout_height="200px"
            android:src="@drawable/followusoninstagram"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorNegro"/>

    </LinearLayout>


</ScrollView>