<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_vertical"

    tools:context="com.nbastatsquiz.DraftActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPreguntaDraft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#FFE48C0E"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/draft_question"

                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearLayoutPrincipalDraft"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="92"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <!--        Caja 1-->
            <LinearLayout
                android:id="@+id/linJ1Draft"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="46"
                android:background="@drawable/floor_load_dark"
                android:orientation="vertical"
                android:weightSum="100">


                <LinearLayout
                    android:id="@+id/LinearLayoutContenedorArribaDraft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/ContenedorLogoDraft"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="68"
                        android:weightSum="100"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_weight="50"
                            android:id="@+id/ivTeam1Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/nba" />
                        <ImageView
                            android:layout_weight="50"
                            android:id="@+id/ivCollege1Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:src="@drawable/nba" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ContenedorJugadorArribaDraft"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="32"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/ivP1Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:src="@drawable/person" />

                        <TextView
                            android:id="@+id/txtNameP1Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="92"
                            android:text="Player1"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <!--        Divider-->
            <View
                android:id="@+id/dividerDraft"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />

            <!--        Caja 2-->
            <LinearLayout
                android:id="@+id/linJ2Draft"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="46"
                android:background="@drawable/floor_load_dark"
                android:orientation="vertical"
                android:weightSum="100">


                <LinearLayout
                    android:id="@+id/LinearLayoutContenedorAbajoDraft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/ContenedorJugadorAbajo2Draft"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="32"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/ivP2Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:src="@drawable/person" />

                        <TextView
                            android:id="@+id/txtNameP2Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="92"
                            android:text="Player2"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ContenedorLogo2Draft"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="68"
                        android:weightSum="100"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivTeam2Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:src="@drawable/nba" />
                        <ImageView
                            android:id="@+id/ivCollege2Draft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/nba" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relCircleDraft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"


        android:orientation="vertical"

        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="100">




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="92"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapes"
                    ></ImageView>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relProgressDraft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"


        android:orientation="vertical"

        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="100">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="92"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBarDraft"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:max="9"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progress_bar" />



            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relTxtPuntacionDraft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"


        android:orientation="vertical"

        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:weightSum="100">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="92"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPuntuacionDraft"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="36sp"
                    tools:ignore="RtlCompat" />





            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


